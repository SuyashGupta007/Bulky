@model Drugs
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Drugs</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class=" border p-3 ">
                <div class="row pb-2">
                    <h2 class="text-primary">Create Drugs</h2>
                    <hr />
                </div>
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Drug_Name" class=" ms-2 "></label>
                    <input asp-for="Drug_Name" type="text" class=" form-control border-0  shadow" />
                    <span asp-validation-for="Drug_Name" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Quantity" class=" ms-2"></label>
                    <input asp-for="Quantity" type="text" class=" form-control border-0  shadow" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Expired_Date" class=" ms-2"></label>
                    <input asp-for="Expired_Date" type="text" class=" form-control border-0  shadow" />
                    <span asp-validation-for="Expired_Date" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class=" ms-2"></label>
                    <input asp-for="Price" type="text" class=" form-control border-0  shadow" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6  col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Drugs" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts{
     @{
          <partial name ="_ValidationScriptsPartial" />
      }
}