@model List<Drugs>

 

<div class="container">
    <div class="row pt-4  pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Drugs List
            </h2>
            <form method="get" asp-action="Searching" asp-controller="Drugs">
                <label for="searchTerm">Search:</label>
                <input type="text" name="searchTerm" id="searchTerm" required>
                <button type="submit">Search</button>

            </form>
        </div>

       
        <div class="col-6 text-end">
            <a asp-controller="Drugs" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Drugs
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Drugs name
            </th>
            <th>
                    Quantity
            </th>  
            <th>
                    Expired_Date
            </th>
            <th>
                    Price
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.Batch_Id))
        {
            <tr>
                <td>
                    @obj.Drug_Name
                </td>
                <td>
                    @obj.Quantity
                </td>
                <td>
                    @obj.Expired_Date
                </td>
                    <td>
                        @obj.Price
                    </td>
                    
                    
                <td>
                     <div class="w-75 btn-group" role="group">
                    <a asp-controller="Drugs" asp-action="Edit" asp-route-id="@obj.Batch_Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Drugs" asp-action="Delete" asp-route-id="@obj.Batch_Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </div>

                </td>
               
            </tr>
        }
       
    </tbody>
   
</table>
</div>