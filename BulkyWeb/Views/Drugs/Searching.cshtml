@model List<Drugs>
@if(Model.Count == 0)
{
    <p>No Result Found</p>
}
else
{

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Drugs name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Expired_Date
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Drug_Name))
            {
                <tr>
                    <td>
                        @obj.Drug_Name
                    </td>
                    <td>
                        @obj.Quantity
                    </td>
                    <td>
                        @obj.Expired_Date
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Drugs" asp-action="Edit" asp-route-id="@obj.Batch_Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Drugs" asp-action="Delete" asp-route-id="@obj.Batch_Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>

                    </td>

                </tr>
            }

        </tbody>

    </table>
}
